\ProvidesPackage{beamerthemeadacore}[2025/11/06 Custom light blue theme]

%========================================================
% Load base themes
%========================================================
\mode<presentation>
\usecolortheme{default}
\useoutertheme{infolines}
\useinnertheme{rectangles}

%========================================================
% Define custom RGB colors
%========================================================
\usepackage{xcolor} % for RGB colors
\definecolor{MyLightBlueRGB}{RGB}{200,220,255}
\definecolor{MyDarkBlueRGB}{RGB}{0,0,102}
\definecolor{MyWhiteRGB}{RGB}{255,255,255}

%========================================================
% Define Beamer colors
%========================================================
\setbeamercolor{normal text}{fg=MyDarkBlueRGB,bg=MyLightBlueRGB}
\setbeamercolor{frametitle}{fg=MyDarkBlueRGB,bg=MyLightBlueRGB}
\setbeamercolor{headline}{fg=MyDarkBlueRGB,bg=MyLightBlueRGB}

% Footer colors
\setbeamercolor{footerbg}{bg=MyWhiteRGB, fg=MyDarkBlueRGB}
\setbeamercolor{footerline}{bg=MyDarkBlueRGB}

% Header lines
\setbeamercolor{titleline}{fg=MyDarkBlueRGB,bg=MyLightBlueRGB}
\setbeamercolor{sectionline}{fg=MyDarkBlueRGB,bg=MyLightBlueRGB}
\setbeamercolor{subsectionline}{fg=MyDarkBlueRGB,bg=MyLightBlueRGB}

% Background canvas
\setbeamercolor{background canvas}{bg=MyLightBlueRGB}

%========================================================
% Header (headline)
%========================================================
%========================================================
% Cascading header with gradient colors
%========================================================
\definecolor{HeaderLine1}{RGB}{180,200,255}  % closest to background
\definecolor{HeaderLine2}{RGB}{120,160,255}  % mid gradient
\definecolor{HeaderLine3}{RGB}{0,0,102}      % dark blue

\setbeamercolor{titleline}{fg=white,bg=HeaderLine1}
\setbeamercolor{sectionline}{fg=white,bg=HeaderLine2}
\setbeamercolor{subsectionline}{fg=white,bg=HeaderLine3}

\setbeamertemplate{headline}{%
  % Document title
  \begin{beamercolorbox}[wd=\paperwidth,ht=2.8ex,dp=0.8ex,leftskip=0.3cm]{titleline}%
    \hspace*{0ex}\usebeamerfont{title in head/foot}\insertshorttitle
  \end{beamercolorbox}%
  % Section title (slightly indented)
  \begin{beamercolorbox}[wd=\paperwidth,ht=2.2ex,dp=0.6ex,leftskip=0.8cm]{sectionline}%
    \usebeamerfont{section in head/foot}\insertsectionhead
  \end{beamercolorbox}%
  % Subsection title (more indented)
  \begin{beamercolorbox}[wd=\paperwidth,ht=2.0ex,dp=0.6ex,leftskip=1.3cm]{subsectionline}%
    \usebeamerfont{subsection in head/foot}\insertsubsectionhead
  \end{beamercolorbox}%
}


%========================================================
% Footer (footline)
%========================================================
\setbeamertemplate{footline}{%
  % Separator line
  \begin{beamercolorbox}[wd=\paperwidth,ht=0.4ex]{footerline}%
  \end{beamercolorbox}%
  % Footer content
  \begin{beamercolorbox}[wd=\paperwidth,ht=3ex,dp=1ex]{footerbg}%
    \hbox{%
      % Logo
      \begin{beamercolorbox}[wd=.15\paperwidth,ht=3ex,dp=1ex,leftskip=1ex]{footerbg}%
        \raggedright \includegraphics[height=2ex]{logo.png}%
      \end{beamercolorbox}%
      % Center (empty)
      \begin{beamercolorbox}[wd=.70\paperwidth,ht=3ex,dp=1ex,center]{footerbg}%
      \end{beamercolorbox}%
      % Page number
      \begin{beamercolorbox}[wd=.15\paperwidth,ht=3ex,dp=1ex,right]{footerbg}%
        \raggedleft \insertframenumber{} / \inserttotalframenumber\hspace*{2ex}%
      \end{beamercolorbox}%
    }%
  \end{beamercolorbox}%
}

%========================================================
% Frame title spacing
%========================================================
\setbeamertemplate{frametitle}{%
  \vspace*{0.4cm}%
  \insertframetitle%
  \vspace*{0.2cm}%
}

\mode<all>


