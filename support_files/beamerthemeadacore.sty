\mode<presentation>

\useinnertheme{rectangles}
\useoutertheme{infolines}

\beamertemplatenavigationsymbolsempty

\setbeamertemplate{page number in head/foot}[totalframenumber]%

\defbeamertemplate*{footline}{adacore theme}
{%
  \leavevmode%
  \hbox{%
  \begin{beamercolorbox}[wd=.333333\paperwidth,ht=2.25ex,dp=1ex,center]{author in head/foot}%
    \insertshortauthor
    \hspace*{2pt} 
    \includegraphics[height=1.9ex]{logo.png}
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.333333\paperwidth,ht=2.25ex,dp=1ex,center]{date in head/foot}%
    \insertshortdate{}
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.333333\paperwidth,ht=2.25ex,dp=1ex,center]{page number in head/foot}%
    \usebeamertemplate{page number in head/foot}
    \hspace*{2ex} 
  \end{beamercolorbox}}%
  \vskip0pt%
}

\defbeamertemplate*{headline}{adacore theme}
{%
    \begin{beamercolorbox}[wd=\paperwidth,colsep=1.5pt]{upper separation line head}
    \end{beamercolorbox}
    \begin{beamercolorbox}[wd=\paperwidth,ht=6pt,dp=3pt,leftskip=3pt]{title in head/foot}
      \usebeamerfont{title in head/foot}
      \insertshorttitle
    \end{beamercolorbox}
    \begin{beamercolorbox}[wd=\paperwidth,ht=6pt,dp=3pt,leftskip=6pt]{section in head/foot}
      \usebeamerfont{section in head/foot}%
      \insertsectionhead
    \end{beamercolorbox}
    \begin{beamercolorbox}[wd=\paperwidth,ht=6pt,dp=3pt,leftskip=9pt]{subsection in head/foot}
      \usebeamerfont{subsection in head/foot}%
      \insertsubsectionhead
    \end{beamercolorbox}
    %%\begin{beamercolorbox}[wd=\paperwidth,colsep=1.5pt]{lower separation line head}
    %%\end{beamercolorbox}
}

\setbeamerfont{block title}{size={}}
\mode
<all>
